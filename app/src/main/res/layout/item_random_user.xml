<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginBottom="@dimen/size_5"
        android:background="@drawable/item_box"
        android:elevation="@dimen/size_2">
        <ImageView
            android:layout_width="@dimen/item_user_img_size"
            android:layout_height="@dimen/item_user_img_size"
            android:src="@drawable/user_thumb"
            android:id="@+id/itemUserImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/item_name_color"
            android:textSize="@dimen/size_18"
            android:fontFamily="@font/font_medium"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/size_10"
            android:id="@+id/itemUserName"
            />

    </LinearLayout>
</layout>